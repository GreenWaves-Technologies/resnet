menu "ResNet menu"

    comment "Options"

    choice MODEL_SIZE
        prompt "Model Size"
        config RESNET18
            bool "resnet18"
        config RESNET50
            bool "resnet50"
    endchoice

    choice MODEL_TYPE
        prompt "Model Type"
        config MODEL_FP32
            bool "fp32"
        config MODEL_INT8
            bool "int8"
    endchoice

    config USE_PRIVILEGED_MRAM
        bool "Use privileged MRAM Flash"
        select DRIVER_MRAM
        default y

    config GPIO_MEAS
        bool "Use GPIO to track nn execution"
        default n

endmenu
source "$(GAP_SDK_HOME)/utils/kconfig/Kconfig"
